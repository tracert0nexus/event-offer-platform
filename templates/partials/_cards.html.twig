<div class="container my-4">
    <div class="row g-4">
        {% for ref in references %}
            {% set media = ref.media|first %}
            {% set imgUrl = media is not null ? asset('uploads/media/' ~ media.fileName) : asset('images/placeholder.jpg') %}

            <div class="col-12 col-md-6 col-lg-4">
                <div class="card h-100">
                    <img src="{{ imgUrl }}" class="card-img-top" alt="{{ ref.title|default('Bild') }}" loading="lazy">
                    <div class="card-body">
                        <h5 class="card-title">{{ ref.title }}</h5>
                        {% if ref.description %}
                            <p class="card-text">{{ ref.description }}</p>
                        {% endif %}
                    </div>
                    <ul class="list-group list-group-flush">
                    </ul>
                    {#
                    <div class="card-body">
                        <a href="#" class="card-link">Mehr</a>
                    </div>
                    #}
                </div>
            </div>
        {% endfor %}
    </div>
</div>
